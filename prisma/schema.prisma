generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id            Int            @id @default(autoincrement())
  name          String
  slug          String         @unique
  city          String
  location      String
  startDateTime DateTime // First day of event and event's start time (e.g., 2025-07-10 10:30:00)
  endDateTime   DateTime // Last day of event and event's end time (e.g., 2025-07-10 17:30:00)
  organizerName String
  imageUrl      String
  description   String
  bookings      EventBooking[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model EventBooking {
  id                Int           @id @default(autoincrement())
  attendeeFirstName String
  attendeeLastName  String
  email             String
  phone             String?
  bookedDateTime    DateTime // When attendee plans to visit
  totalTickets      Int           @default(1)
  bookingStatus     BookingStatus @default(PENDING)
  eventId           Int
  event             Event         @relation(fields: [eventId], references: [id])
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELED
}
